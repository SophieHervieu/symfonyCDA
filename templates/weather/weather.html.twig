{% extends 'base.html.twig' %}

{% block title %}Météo{% endblock %}

{% block body %}
<section class="text-gray-600 body-font">
    <div class="container px-5 py-24 mx-auto">
      <div class="flex flex-col text-center w-full mb-20">
        <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">Météo</h1>
        <p class="lg:w-2/3 mx-auto leading-relaxed text-base">Détails de la météo</p>
      </div>
      <div class="flex justify-center h-64 text-xl">
        <div class="p-2 lg:w-1/3 md:w-1/2 w-full">
          <div class="h-full flex items-center bg-teal-600 border-gray-200 border p-4 rounded-lg">
            <img alt="team" class="w-32 h-32 object-cover object-center flex-shrink-0 rounded-full mr-4 pe-4" src="https://openweathermap.org/img/wn/{{weather["weather"][0]["icon"]}}@2x.png">
            <div class="flex-grow">
              <h2 class="text-white text-2xl font-semibold pb-8">Nous sommes à {{ weather.name }}</h2>
              <p class="text-white">Il fait {{ weather.main.temp - 273.15}} °C</p>
              <p class="text-white">Le vent souffle à {{ weather.wind.speed }} km/h</p>
              <p class="text-white">Taux d'humidité : {{ weather.main.humidity }}%</p>
              <p class="text-white">{{ weather.sys.country }}</p>
            </div>
          </div>
        </div>
        {% include "partials/_toast.html.twig" %}
      </div>
    </div>
  </section>
{% endblock %}
